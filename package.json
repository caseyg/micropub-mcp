{
  "name": "micropub-mcp",
  "version": "1.0.0",
  "description": "A remote MCP server on Cloudflare Workers that enables AI clients to publish content to any IndieWeb site via the Micropub protocol",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "tail": "wrangler tail"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "agents": "^0.0.74",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.0",
    "@cloudflare/workers-types": "^4.20250317.0",
    "@vitest/coverage-v8": "^3.0.0",
    "typescript": "^5.8.0",
    "vitest": "^3.0.0",
    "wrangler": "^4.14.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
